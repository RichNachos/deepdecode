{
    "EXP_NAME": "Run1",
    "DATASET_TYPE": "classification",
    "MODEL_NAME": "SimpleLSTM",
    "LOSS": "CrossEntropyLoss",

    "VALIDATION": true,
    "DATA":
    {
        "DATALOADER": "SequenceDataLoader",
        "DATA_DIR": "/threeclass",
        "BATCH_SIZE": 32,
        "SHUFFLE": true,
        "VALIDATION_SPLIT": 0.1,
        "NUM_WORKERS": 2
    },

    "MODEL":
    {
        "embedding_dim": 4,
        "hidden_dim": 128,
        "hidden_layers": 3,
        "output_dim": 3
    },

    "OPTIMIZER":
    {
        "type": "Adam",
        "lr": 0.001,
        "weight_decay": 0,
        "amsgrad": true
    },

    "lr_scheduler":
    {
        "type": "StepLR",
        "step_size": 50,
        "gamma": 0.1
    },

    "TRAINER":
    {
        "epochs": 1,
        "save_dir": "/saved_models",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}